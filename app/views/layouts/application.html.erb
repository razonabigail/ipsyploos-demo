<!DOCTYPE html>
<html>
<head>
  <title>IpsyploosDemo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div id="main_content">
		
		<div id="header">
			<% if !user_signed_in? && current_page?(root_path) %>
			<p class="sign_in"><%= link_to "Log In / Sign Up", new_user_session_path %></p>
			<% end %>
			<% if user_signed_in? %>
				<div class="buttons">
					<form action="/processing" method="get"><input type="hidden" name="shop" value="avon"><input type="hidden" name="creative_id" value="1"><button>AVON</button></form>

					<form action="/processing" method="get"><input type="hidden" name="shop" value="maccosmetics"><input type="hidden" name="creative_id" value="2"><button>MAC</button></form>

					<form action="/processing" method="get"><input type="hidden" name="shop" value="sephora"><input type="hidden" name="creative_id" value="3"><button>SEPHORA</button></form>



					
					<br>
					<button class="button"><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></button>
				</div>
			<% end %>
		</div>
		<% flash.each do |name, msg| %>
			<%= content_tag(:div, msg, class:"alert") %>
		<% end %>


		<%= yield %>		
	</div>

</body>
</html>
